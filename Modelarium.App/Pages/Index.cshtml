@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div>
                            <h1 class="card-title mb-1">Welcome to Modelarium</h1>
                        </div>
                        <div class="ms-auto">
                            <a href="/Chat" class="btn btn-primary me-2">
                                <i class="fas fa-comments me-2"></i>Start Chat
                            </a>
                            <a href="/Models" class="btn btn-outline-primary">
                                <i class="fas fa-microchip me-2"></i>Models
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-dark me-3">
                            <i class="fas fa-microchip text-danger fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Installed Models</h5>
                            <p class="text-muted mb-0">Local models available for use</p>
                        </div>
                    </div>
                    <h2 class="mb-0">@Model.DashboardWidgets?.Models</h2>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-muted">Total models</small>
                        <a href="/Models" class="text-danger small">View all</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-dark me-3">
                            <i class="fas fa-comments text-danger fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Recent Chats</h5>
                            <p class="text-muted mb-0">Your conversation history</p>
                        </div>
                    </div>
                    <h2 class="mb-0">@Model.DashboardWidgets?.Conversations</h2>
                    <p class="text-muted">Last chat: @Model.DashboardWidgets?.LastConversation</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-dark me-3">
                            <i class="fas fa-hdd text-danger fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Storage</h5>
                            <p class="text-muted mb-0">Local storage usage</p>
                        </div>
                    </div>
                    <h2 class="mb-0">@Model.DashboardWidgets?.UsedStorageFormatted</h2>
                    <div class="progress mt-2" style="height: 6px;">
                        <div class="progress-bar bg-danger" role="progressbar" 
                             style="width: @Model.DashboardWidgets?.UsagePercent%;" 
                             aria-valuenow="@Model.DashboardWidgets?.UsagePercent" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-muted">@Model.DashboardWidgets?.UsagePercent% of available space used</small>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Chat" class="btn btn-primary">
                            <i class="fas fa-comments me-2"></i>New Chat
                        </a>
                        <a href="/Search" class="btn btn-outline-primary disabled">
                            <i class="fas fa-search me-2"></i>Search Models <span class="badge bg-warning">Coming...</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>